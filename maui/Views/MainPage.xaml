<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:OBD2Tool.ViewModels"
             x:Class="OBD2Tool.Views.MainPage"
             x:DataType="vm:MainViewModel">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label Text="OBD2 Diagnostic Tool"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            <Label Text="{Binding StatusMessage}"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

        <!-- Device List -->
        <CollectionView Grid.Row="1"
                      ItemsSource="{Binding DiscoveredDevices}"
                      SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="10">
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding Name}"
                                       FontSize="16"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding Id}"
                                       FontSize="12"
                                       TextColor="Gray" />
                            </VerticalStackLayout>
                            <Button Grid.Column="1"
                                    Text="Connect"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=ConnectToDeviceCommand}"
                                    CommandParameter="{Binding .}"
                                    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=IsConnected, Converter={StaticResource InverseBoolConverter}}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Actions -->
        <HorizontalStackLayout Grid.Row="2" 
                             Spacing="10"
                             HorizontalOptions="Center">
            <Button Text="{Binding IsScanning, Converter={StaticResource ScanButtonTextConverter}}"
                    Command="{Binding IsScanning, Converter={StaticResource ScanCommandConverter}}"
                    IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBoolConverter}}" />
            
            <Button Text="Disconnect"
                    Command="{Binding DisconnectCommand}"
                    IsVisible="{Binding IsConnected}" />
        </HorizontalStackLayout>
    </Grid>

</ContentPage>
